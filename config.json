{
  "setting": {
    "=": {
      "alignment":  "left",
      "leftSpace":  true,
      "rightSpace": true,
      "prefixes":   ["+", "-", "&", "|", "<", ">", "!", "~", "%", "/", "*", "."],
      "scope":      "operator|assignment"
    },
    ":": {
      "alignment":  "right",
      "leftSpace":  false,
      "rightSpace": true,
      "scope":      "operator|assignment"
    },
    ",": {
      "leftSpace":  false,
      "rightSpace": true,
      "scope":      "delimiter",
      "multiple":   {
        "number": {
          "alignment": "right"
        },
        "string": {
          "alignment": "left"
        }
      }
    }
  },
  "mapping": {
    "alignment": {
      "title": "Padding for ",
      "description": "Pad left or right of the character",
      "type": "string",
      "enum": ["left", "right"]
    },
    "leftSpace": {
      "title": "Left space for ",
      "description": "Add 1 whitespace to the left of the character",
      "type": "boolean"
    },
    "rightSpace": {
      "title": "Right space for ",
      "description": "Add 1 whitespace to the right of the character",
      "type": "boolean"
    }
  }
}
